<Window x:Class="TestBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="480px"/>
            <ColumnDefinition Width="480px"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Height="32" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="address" Width="800" />
            <Button Grid.Column="1"  Click="ButtonBase_OnClick" Content="GO"/>

        </Grid>

        <WebBrowser Grid.Row="1" Grid.Column="0" x:Name="original" />
        <WebBrowser Grid.Row="1" Grid.Column="1" x:Name="readable" />
        <ScrollViewer Grid.Row="1" Grid.Column="2" >
            <TextBlock TextWrapping="Wrap"  x:Name="summary" />
        </ScrollViewer>
    </Grid>
</Window>
